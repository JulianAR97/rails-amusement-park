<%= form_tag ({controller: 'session', action: 'create', method: 'post'}) do %>
    <div class="form-group">
      <%= label_tag(:name, "Your name:") %>
      <%= collection_select(:user, :name, User.all, :name, :name, prompt: "Please select your name") %>
    </div>

    <div class="form-group">
      <%= label_tag(:Password, "Enter password:")%>
      <%= password_field_tag(:password, nil, class: "form-control") %>
    </div>

    <div class="actions">
      <%= submit_tag("Sign In") %>
    </div>
    
<% end %>